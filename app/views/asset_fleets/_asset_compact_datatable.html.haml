:ruby
  table_dom_id = SecureRandom.hex

.col-xs-12
  %table.table.table-hover{:id => table_dom_id, :data => {:toggle => 'table',
    :card_view => "false",
    :pagination => 'true',
    :show_columns => 'false',
    :show_export => 'false',
    :show_toggle => 'false',
    :resizable => 'false',
    :search => 'false'}}
    %thead
      %tr
        %th.left{:data => {:sortable => 'true'}} Asset Tag
        %th.left{:data => {:sortable => 'true'}} External ID
        %th.left{:data => {:sortable => 'true'}} VIN
        %th.left{:data => {:sortable => 'true'}} License Plate
        %th.left{:data => {:sortable => 'true'}} Title Number
        %th.left{:data => {:sortable => 'true'}} Status
        %th.left{:data => {:sortable => 'true'}} Emergency Contingency
        %th.left{:data => {:sortable => 'true'}} ADA Accessible
        %th.left{:data => {:sortable => 'true'}} ULB
        %th.left{:data => {:sortable => 'true'}} Mileage

        %th.center{:data => {:sortable => 'true', :order => 'desc'}} Valid in Fleet
        %th.center Action

    %tbody
      - (assets + @available_assets).each do |a|
        - typed_asset = Asset.get_typed_asset(a) # could make this faster rather than run on each asset
        %tr{:id => a.object_key, :class => 'action-path'}
          %td.left
            = link_to a.asset_tag, inventory_path(a)
          %td.left= a.external_id
          %td.left= a.serial_number
          %td.left= a.license_plate
          %td.left= a.title_number
          %td.left= a.service_status_type
          %td.left= format_as_boolean(a.fta_emergency_contingency_fleet)
          %td.left= format_as_boolean(a.ada_accessible_lift)
          %td.left= @asset_fleet.useful_life_benchmark
          %td.left= a.reported_mileage

          - assets_asset_fleet = AssetsAssetFleet.find_by(asset: a, asset_fleet: @asset_fleet)
          %td.center= format_as_boolean(assets_asset_fleet.try(:active))
          %td.center
            - if assets_asset_fleet.present?
              = link_to remove_asset_asset_fleet_path(@asset_fleet, asset: a.object_key), :method => :delete, :data => {:confirm => "Are you sure?"}, :title => 'Remove asset'  do
                %i.fa.fa-trash-o.fa-fw.text-danger
            - else
              = link_to add_asset_asset_fleets_path(fleet_asset_builder: {asset_id: a.id, asset_fleet_id: @asset_fleet.id}) do
                %i.fa.fa-plus.text-success
