:ruby
  table_dom_id = SecureRandom.hex

= format_field("FY Year", format_as_fiscal_year(current_fiscal_year_year))
= format_field('Miles This Year', "#{format_as_integer(@asset_fleet.miles_this_year)} miles")
= format_field('Avg Lifetime Miles per Active Vehicle', "#{format_as_integer(@asset_fleet.avg_active_lifetime_miles)} miles")

.row{style: 'padding-top: 25px;'}
  .col-xs-12
    %table.table.table-hover{:id => table_dom_id, :data => {:toggle => 'table',
      :card_view => "false",
      :pagination => 'true',
      :show_columns => 'false',
      :show_export => 'false',
      :show_toggle => 'false',
      :resizable => 'false',
      :search => 'false'}}
      %thead
        %tr
          %th.center{:data => {:sortable => 'true', :order => 'desc'}} Asset Tag
          %th.center{:data => {:sortable => 'true', :order => 'desc'}} Odometer Reading FY Start
          %th.center{:data => {:sortable => 'true', :order => 'desc'}} Odometer Reading FY End
          %th.center{:data => {:sortable => 'true', :order => 'desc'}} Mileage During FY

      %tbody
        - @asset_fleet.assets.each do |a|
          - typed_asset = Asset.get_typed_asset(a) # could make this faster rather than run on each asset
          - mileage_fy_start = typed_asset.fiscal_year_mileage(current_fiscal_year_year-1)
          - mileage_fy_end = typed_asset.fiscal_year_mileage(current_fiscal_year_year)
          %tr
            %td.left= a.asset_tag
            %td.right
              - if mileage_fy_start.present?
                = mileage_fy_start
              - else
                = link_to '#', :remote => true, :class => "btn btn-warning btn-sm" do
                  Record Mileage
            %td.right
              - if mileage_fy_end.present?
                = mileage_fy_end
              - else
                = link_to '#', :remote => true, :class => "btn btn-warning btn-sm" do
                  Record Mileage
            %td.right
              - if mileage_fy_start.present? && mileage_fy_end.present?
                = mileage_fy_end - mileage_fy_start
