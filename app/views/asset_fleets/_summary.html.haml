= format_field("Organization", link_to(@asset_fleet.organization.short_name, organization_path(@asset_fleet.organization)))
= format_field(@asset_fleet.ntd_id_label, @asset_fleet.ntd_id)
- if @asset_fleet.ntd_id.nil?
  .alert.alert-danger.alert-dismissible{:role=> "alert"}
    %button.close{:data => {:dismiss => 'alert'}}
      %span{:aria => {:hidden => true}} &times;
    %p.text-center
      %strong
        Warning!
      = "Please add #{@asset_fleet.ntd_id_label}.".html_safe
- if @asset_fleet.asset_fleet_type.class_name == 'SupportVehicle'
  = format_field('Fleet Name', @asset_fleet.fleet_name)