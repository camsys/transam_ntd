.row
  .col-md-3
    .panel.panel-default.header-part
      .panel-heading
        .row
          .col-md-6
            %h3.panel-title
              %i.fa.fa-usd
              = @asset_fleet
          .col-md-6
            = render 'actions'
      .panel-body
        = render 'summary'

  .col-md-9
    - if @asset_fleet.ntd_id.nil?
      .alert.alert-danger.alert-dismissible{:role=> "alert"}
        %button.close{:data => {:dismiss => 'alert'}}
          %span{:aria => {:hidden => true}} &times;
        %p.text-center
          %strong
            Warning!
          = "Please add #{@asset_fleet.ntd_id_label}.".html_safe

    .panel.panel-default.header-part
      .panel-heading
        .row
          .col-md-12
            %h3.panel-title
              %i.fa.fa-folder-open
              Details

      .panel-body
        = render 'details'

.modal.fade#form-modal{:tabindex => -1, :role => 'dialog', :aria => {:hidden => true}}

= render 'scripts'
